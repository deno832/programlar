<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info">

    <EditText
        android:id="@+id/chat_history"
        android:layout_width="340dp"
        android:layout_height="563dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_thingy2"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:onClick="refresh_func"
        android:text="Yenile!"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/chat_history"
        app:layout_constraintTop_toBottomOf="@+id/chat_history" />

    <Button
        android:id="@+id/button3"
        android:layout_width="114dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:onClick="clean_func"
        android:text="LoglarÄ± Temizle!"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/chat_history"
        app:layout_constraintTop_toBottomOf="@+id/chat_history" />
</androidx.constraintlayout.widget.ConstraintLayout>